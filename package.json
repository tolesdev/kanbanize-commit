{
	"name": "commit-work-item",
	"displayName": "Commit Work Item",
	"description": "Prompt for a Work Item card ID on commit.",
	"publisher": "toles",
	"version": "0.0.2",
	"engines": {
		"vscode": "^1.22.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./out/extension.js",
	"repository": {
		"type": "git",
		"url": "https://github.com/btoles/kanbanize-commit"
	},
	"contributes": {
		"commands": [
			{
				"command": "kbn-git.commit",
				"title": "Commit - Work Item",
				"category": "Git"
			},
			{
				"command": "kbn-git.commitStaged",
				"title": "Commit Staged - Work Item",
				"category": "Git"
			},
			{
				"command": "kbn-git.commitStagedAmend",
				"title": "Commit Staged (Amend) - Work Item",
				"category": "Git"
			},
			{
				"command": "kbn-git.commitAll",
				"title": "Commit All - Work Item",
				"category": "Git"
			},
			{
				"command": "kbn-git.commitAllAmend",
				"title": "Commit All (Amend) - Work Item",
				"category": "Git"
			}
		],
		"menus": {
			"scm/title": [
				{
					"command": "kbn-git.commit",
					"group": "kbn-git"
				},
				{
					"command": "kbn-git.commitStaged",
					"group": "kbn-git"
				},
				{
					"command": "kbn-git.commitStagedAmend",
					"group": "kbn-git"
				},
				{
					"command": "kbn-git.commitAll",
					"group": "kbn-git"
				},
				{
					"command": "kbn-git.commitAllAmend",
					"group": "kbn-git"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "yarn run compile && yarn run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.1",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.22.0",
		"@typescript-eslint/eslint-plugin": "^2.18.0",
		"@typescript-eslint/parser": "^2.18.0",
		"eslint": "^6.8.0",
		"glob": "^7.1.6",
		"mocha": "^7.0.1",
		"typescript": "^3.7.5",
		"vscode-test": "^1.3.0"
	},
	"dependencies": {
		"simple-git": "^3.5.0",
		"simple-git-types": "^1.53.10"
	}
}
